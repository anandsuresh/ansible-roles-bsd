#-------------------------------------------------------------------------------
# COLOR SUPPORT
#-------------------------------------------------------------------------------

{% if not (shell_color_support|match('false|no|disable')) %}
# ls
alias ls='ls -FI -G -D "{{(shell_ls_time_style|e)}}"'
alias la='ls -laF -G -D "{{(shell_ls_time_style|e)}}"' # long listing, list all files
alias ll='ls -lFI -G -D "{{(shell_ls_time_style|e)}}"'  # long listing
alias lr='ls -lRFI -G -D "{{(shell_ls_time_style|e)}}"' # long listing, list subdirectories recursively
alias lt='ls -ltFI -G -D "{{(shell_ls_time_style|e)}}"' # long listing, sort by modification time
alias lz='ls -lZFI -G -D "{{(shell_ls_time_style|e)}}"' # long listing, shellow MAC label

# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
{% endif %}

#-------------------------------------------------------------------------------
# SHELL ALIASES
#-------------------------------------------------------------------------------

# cls
alias cls='printf "\033c"'

{% if not (shell_safety|match('false|no|disable')) %}
# Shell safety
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias ln='ln -i'
{% endif %}

#-------------------------------------------------------------------------------
# SHELL VARIABLES
#-------------------------------------------------------------------------------

{% if not (shell_ftp_proxy|match('false|no|disable')) %}
# ftp_proxy
ftp_proxy='{{shell_ftp_proxy}}'
export ftp_proxy
{% endif %}

{% if not (shell_http_proxy|match('false|no|disable')) %}
# http_proxy
http_proxy='{{shell_http_proxy}}'
export http_proxy
{% endif %}

{% if not (shell_histsize|match('false|no|disable')) %}
# HISTSIZE
HISTSIZE={{(shell_histsize|int)}}
export HISTSIZE
{% endif %}

{% if not (shell_pager|match('false|no|disable')) %}
# PAGER
PAGER='{{(shell_pager|e)}}'
export PAGER
{% endif %}
