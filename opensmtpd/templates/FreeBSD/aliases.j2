# Pretty much everything else in this file points to "root", so
# you would do well in either reading root's mailbox or forwarding
# root's email from here.

{% if (opensmtpd_root_mail_address is defined) and not ((opensmtpd_root_mail_address == None) or (opensmtpd_root_mail_address == '')) %}
root: {{(opensmtpd_root_mail_address|e)}}
{% endif %}

