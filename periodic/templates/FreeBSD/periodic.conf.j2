#-------------------------------------------------------------------------------
# DAILY OPTIONS
#-------------------------------------------------------------------------------

daily_output="{{periodic_daily_output}}"
{% if (periodic_daily_show_success is match('false|no|disable')) %}
daily_show_success="NO"
{% else %}
daily_show_success="YES"
{% endif %}
{% if (periodic_daily_show_info is match('false|no|disable')) %}
daily_show_info="NO"
{% else %}
daily_show_info="YES"
{% endif %}
{% if (periodic_daily_show_badconfig is match('true|yes|enable')) %}
daily_show_badconfig="YES"
{% else %}
daily_show_badconfig="NO"
{% endif %}

