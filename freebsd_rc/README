--------------------------------------------------------------------------------
DESCRIPTION
--------------------------------------------------------------------------------

This role manages freebsd_rc.

The rc utility is the command script which controls the automatic boot process
after being called by init.

For more detailed information on the usage and available configuration options
please consult the following sections.

--------------------------------------------------------------------------------
USAGE
--------------------------------------------------------------------------------

INSTALL
  - hosts: all
    roles:
      - role: freebsd_rc
    vars:
      freebsd_rc_state: 'install'
      freebsd_rc_path_default: '/etc/rc.conf'

INACTIVE
  - hosts: all
    roles:
      - role: freebsd_rc
    vars:
      freebsd_rc_state: 'inactive'

CONFIG
  vars:
    freebsd_rc_all:
      - name: 'sshd_enable'
        value: 'YES'
        state: 'true'
        comment: 'Enable service OpenSSH'

    freebsd_rc_group:
      - name: 'hostname'
        value: 'example01'
        state: 'true'
        comment: 'Define short hostname'

      - name: 'keymap'
        value: 'swissgerman.iso.kbd'
        state: 'true'
        comment: 'Set keymap'

    freebsd_rc_host:
      - name: 'ifconfig_re0'
        value: 'inet 192.168.1.10 netmask 255.255.255.0'
        state: 'true'
        comment: 'Define primary IP address'

      - name: 'defaultrouter'
        value: '192.168.1.1'
        state: 'true'
        comment: 'Define gateway'

      - name: 'ifconfig_re1'
        value: 'inet 192.168.2.10 netmask 255.255.255.0'
        state: 'true'
        comment: 'Define secondary IP address'

      - name: 'ifconfig_re2'
        value: 'inet 192.168.3.10 netmask 255.255.255.0'
        state: 'true'
        comment: 'Define tertiary IP address'

--------------------------------------------------------------------------------
VARIABLES
--------------------------------------------------------------------------------

CONFIG
  state
    Description: Control the state of the 'rc' entry.
    Implemented: 0.1
    Required   : False
    Value      : Predetermined
    Type       : String
    Default    : 'true'
    Options    :
      Create: 'true' | 'yes' | 'create'
      Remove: 'false' | 'no' | 'remove'

  comment
    Description: Define a comment for the 'rc' entry.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : String
    Default    : "{{host.name}}"
    Options    :
      Examples: 'Define short hostname' | 'Set keymap' | 'Define IP address' |
                'Define gateway' | 'Enable service' | 'Disable service'
      None    : ''

  name
    Description: Define the name of the 'rc' entry.
    Implemented: 0.1
    Required   : True
    Value      : Arbitrary
    Type       : String
    Default    : ''
    Options    :
      Examples: 'hostname' | 'keymap' | 'ifconfig_re0' | 'defaultrouter' |
                'sshd_enable'

  path
    Description: Define the path of the 'rc' file.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : String
    Default    : "{{freebsd_rc_path_default}}"
    Options    :
      Examples: '/etc/rc.conf'

  value
    Description: Define the value of the 'rc' entry.
    Implemented: 0.1
    Required   : True
    Value      : Arbitrary
    Type       : String
    Default    : ''
    Options    :
      Examples: 'example01' | 'swissgerman.iso.kbd' |
                'inet 192.168.1.10 netmask 255.255.255.0' |
                '192.168.1.1' | 'YES' | 'NO'

ROLE
  freebsd_rc_state
    Description: Control the state of the role.
    Implemented: 0.1
    Required   : False
    Value      : Predetermined
    Type       : String
    Default    : 'install'
    Options    :
      Install : 'true' | 'yes' | 'install'
      Inactive: 'quiesce' | 'inactive'

  freebsd_rc_all
    Description: Define the 'freebsd_rc_all' option.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : Array/Hash
    Default    : []
    Options    :
      Examples: [{name: 'sshd_enable', value: 'YES', state: 'true', comment: 'Enable service OpenSSH'},
                 {name: 'hostname', value: 'example01', state: 'true', comment: 'Define short hostname'}]
      None    : []

  freebsd_rc_group
    Description: Define the 'freebsd_rc_group' option.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : Array/Hash
    Default    : []
    Options    :
      Examples: [{name: 'sshd_enable', value: 'YES', state: 'true', comment: 'Enable service OpenSSH'},
                 {name: 'hostname', value: 'example01', state: 'true', comment: 'Define short hostname'}]
      None    : []

  freebsd_rc_host
    Description: Define the 'freebsd_rc_host' option.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : Array/Hash
    Default    : []
    Options    :
      Examples: [{name: 'sshd_enable', value: 'YES', state: 'true', comment: 'Enable service OpenSSH'},
                 {name: 'hostname', value: 'example01', state: 'true', comment: 'Define short hostname'}]
      None    : []

  freebsd_rc_path_default
    Description: Define the default path of the 'rc' file.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : String
    Default    : '/etc/rc.conf'
    Options    :
      Examples: '/etc/rc.conf'

