#-------------------------------------------------------------------------------
# OPTIONS
#-------------------------------------------------------------------------------

# Block policy (drop, return)
{% if (openbsd_pf_option_block_policy|match('return')) %}
set block-policy return
{% else %}
set block-policy drop
{% endif %}

# Debugging level (none, emerg, alert, crit, err, warning, notice, info, debug)
{% if (openbsd_pf_option_debug|match('none')) %}
set debug none
{% elif (openbsd_pf_option_debug|match('emerg')) %}
set debug emerg
{% elif (openbsd_pf_option_debug|match('alert')) %}
set debug alert
{% elif (openbsd_pf_option_debug|match('crit')) %}
set debug crit
{% elif (openbsd_pf_option_debug|match('err')) %}
set debug err
{% elif (openbsd_pf_option_debug|match('warning')) %}
set debug warning
{% elif (openbsd_pf_option_debug|match('notice')) %}
set debug notice
{% elif (openbsd_pf_option_debug|match('info')) %}
set debug info
{% else %}
set debug debug
{% endif %}

# Operating system fingerprints
set fingerprints '{{openbsd_pf_option_fingerprints}}'

# Host ID
{% if not (openbsd_pf_option_hostid|match('false|no|disable|none')) %}
set hostid {{openbsd_pf_option_hostid}}
{% endif %}

# Limits
{% if not ((openbsd_pf_option_limit == '') or (openbsd_pf_option_limit == [])) %}
{% for limit in openbsd_pf_option_limit %}
# {{limit.comment}}
{% for config in limit.config %}
set limit {{config}}
{% endfor %}
{% endfor %}
{% else %}
{% endif %}

# Log interface (none, <interface>)
{% if not (openbsd_pf_option_loginterface|match('false|no|disable|none')) %}
set loginterface {{openbsd_pf_option_loginterface}}
{% else %}
set loginterface none
{% endif %}

# Optimization (normal, high-latency, satellite, aggressive, conservative)
{% if (openbsd_pf_option_optimization|match('high-latency')) %}
set optimization high-latency
{% elif (openbsd_pf_option_optimization|match('satellite')) %}
set optimization satellite
{% elif (openbsd_pf_option_optimization|match('aggressive')) %}
set optimization aggressive
{% elif (openbsd_pf_option_optimization|match('conservative')) %}
set optimization conservative
{% else %}
set optimization normal
{% endif %}

# Ruleset optimization (none, basic, profile)
{% if (openbsd_pf_option_ruleset_optimization|match('basic')) %}
set ruleset-optimization basic
{% elif (openbsd_pf_option_ruleset_optimization|match('profile')) %}
set ruleset-optimization profile
{% else %}
set ruleset-optimization none
{% endif %}

# Reassemble
{% if (openbsd_pf_option_reassemble|match('false|no|disable')) %}
set loginterface no
{% else %}
set reassemble yes
{% endif %}

# Skip
{% if not ((openbsd_pf_option_skip == '') or (openbsd_pf_option_skip == [])) %}
set skip on {% for option_skip in openbsd_pf_option_skip %}{{option_skip}}{% if not loop.last %}, {% endif %}{% endfor %}

{% endif %}

# State defaults
{% if not ((openbsd_pf_option_state_defaults == '') or (openbsd_pf_option_state_defaults == [])) %}
set state-defaults {% for state_groups in openbsd_pf_option_state_defaults %}{{state_groups}}{% if not loop.last %}, {% endif %}{% endfor %}

{% endif %}

# State policy (if-bound, floating)
{% if (openbsd_pf_option_state_policy|match('floating')) %}
set state-policy floating
{% else %}
set state-policy if-bound
{% endif %}

# Timeouts
{% if not ((openbsd_pf_option_timeout == '') or (openbsd_pf_option_timeout == [])) %}
{% for timeout in openbsd_pf_option_timeout %}
# {{timeout.comment}}
{% for config in timeout.config %}
set timeout {{config}}
{% endfor %}
{% endfor %}
{% else %}
{% endif %}

